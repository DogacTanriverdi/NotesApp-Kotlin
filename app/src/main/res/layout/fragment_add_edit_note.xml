<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lastModifiedTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/montserrat"
            android:gravity="end"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:text="@string/last_modified"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noteBodyET" />

        <EditText
            android:id="@+id/noteTitleET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat_bold"
            android:hint="@string/title"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/color_text"
            android:textCursorDrawable="@drawable/text_cursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/noteBodyET"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:autofillHints=""
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/montserrat"
            android:gravity="start|top"
            android:hint="@string/type_something"
            android:inputType="textMultiLine|textCapSentences"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textColor="@color/color_text"
            android:textCursorDrawable="@drawable/text_cursor"
            app:layout_constraintBottom_toTopOf="@+id/lastModifiedTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/noteTitleET" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/textStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/bg_text_style"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/bold_button"
            android:padding="10dp"
            android:src="@drawable/ic_bold" />

        <ImageButton
            android:id="@+id/ibItalic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/italic_button"
            android:padding="10dp"
            android:src="@drawable/ic_italic" />

        <ImageButton
            android:id="@+id/ibUnderline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/underline_button"
            android:padding="10dp"
            android:src="@drawable/ic_underline" />

        <ImageButton
            android:id="@+id/ibFormatClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/normal_text_button"
            android:padding="10dp"
            android:src="@drawable/ic_format_clear" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/updateTextStyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/bg_text_style"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/ibBoldUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/bold_button"
            android:padding="10dp"
            android:src="@drawable/ic_bold" />

        <ImageButton
            android:id="@+id/ibItalicUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/italic_button"
            android:padding="10dp"
            android:src="@drawable/ic_italic" />

        <ImageButton
            android:id="@+id/ibUnderlineUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/underline_button"
            android:padding="10dp"
            android:src="@drawable/ic_underline" />

        <ImageButton
            android:id="@+id/ibFormatClearUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="@string/normal_text_button"
            android:padding="10dp"
            android:src="@drawable/ic_format_clear" />


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/custom_fab_color"
        android:contentDescription="@string/floating_action_button"
        android:src="@drawable/ic_check" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="@color/custom_fab_color"
        android:contentDescription="@string/floating_action_button"
        android:src="@drawable/ic_check"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>